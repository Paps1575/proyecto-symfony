{% extends 'base.html.twig' %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5" style="max-width: 800px; animation: fadeIn 0.8s;">
    <h2 class="text-center mb-4" style="font-weight: 800; color: #333;">Carrusel de Outfits</h2>

    {# FORMULARIO PARA SUBIR #}
        <div class="card p-4 mb-5 shadow-sm border-0" style="border-radius: 15px;">
        <form action="{{ path('app_carrusel_subir') }}" method="post" enctype="multipart/form-data" class="d-flex gap-2">
            <input type="file" name="imagen" class="form-control" required accept="image/*">
            <button type="submit" class="btn btn-primary px-4" style="border-radius: 10px; font-weight: bold;">Subir Foto</button>
        </form>
    </div>

    {# EL CARRUSEL #}
        {% if imagenes|length > 0 %}
        <div id="carruselOutfit" class="carousel slide shadow-lg" data-bs-ride="carousel" style="border-radius: 20px; overflow: hidden;">
        <div class="carousel-inner">
            {% for img in imagenes %}
                <div class="carousel-item {{ loop.first ? 'active' : '' }}">
                    <img src="{{ asset('uploads/' ~ img.ruta) }}" class="d-block w-100" style="height: 450px; object-fit: cover;" alt="Outfit">
                </div>
            {% endfor %}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carruselOutfit" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carruselOutfit" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
    {% else %}
        <p class="text-center text-muted">Aún no hay fotos de deidades. ¡Sube la primera!</p>
    {% endif %}

    <div class="text-center mt-4">
        <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">Regresar al Inicio</a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
