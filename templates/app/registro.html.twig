{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}

{% block body %}
    <h1>Paso 1: Registro</h1>
    <hr>

    {% for message in app.flashes('error') %}
        <div style="color: white; background: #dc3545; padding: 15px; margin-bottom: 20px; border-radius: 4px;">
            {{ message }}
        </div>
    {% endfor %}

    <div style="max-width: 450px; padding: 20px; border: 1px solid #ddd; background: #fff;">
        {{ form_start(formulario) }}
        <div style="margin-bottom: 20px;">
            {{ form_label(formulario.nombre, 'Escribe tu nombre completo:') }}
            {{ form_widget(formulario.nombre, {'attr': {'style': 'width:100%; padding: 8px;'}}) }}
        </div>

        <div style="margin-bottom: 20px;">
            <label>Verificaci√≥n de seguridad:</label>
            <div style="margin-top: 10px;">
                {# TU LLAVE DE SITIO QUE TERMINA EN LHlND #}
                <div class="g-recaptcha" data-sitekey="6LdJQlcsAAAAAHng2XiAGWHbFeaJi_d1ggsLHlND"></div>
            </div>
        </div>

        <button type="submit" style="width: 100%; padding: 12px; background: #007bff; color: white; border: none; font-weight: bold; cursor: pointer;">
            Siguiente Paso
        </button>
        {{ form_end(formulario, {'render_rest': false}) }}
    </div>
{% endblock %}
