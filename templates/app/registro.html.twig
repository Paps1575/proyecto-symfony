{# templates/app/registro.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Paso 1: Registro{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# Script necesario para que Google cargue el cuadro de "No soy un robot" #}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}

{% block body %}
    <h1>Paso 1: Registro</h1>

    {# Breadcrumbs para que el profe vea orden en la arquitectura #}
    <nav aria-label="breadcrumb">
        <ol style="display: flex; list-style: none; padding: 0; gap: 10px;">
            {% for crumb in breadcrumbs %}
                <li>
                    {% if not loop.last %}
                        <a href="{{ crumb.url }}">{{ crumb.name }}</a> <span>/</span>
                    {% else %}
                        <strong>{{ crumb.name }}</strong>
                    {% endif %}
                </li>
            {% endfor %}
        </ol>
    </nav>

    <hr>

    {# Mostrar errores si el captcha falla #}
    {% for message in app.flashes('error') %}
        <div style="color: white; background-color: #d9534f; padding: 10px; margin-bottom: 10px; border-radius: 5px;">
            {{ message }}
        </div>
    {% endfor %}

    <div style="max-width: 450px; background: #f9f9f9; padding: 20px; border-radius: 8px;">
        {{ form_start(formulario) }}

        {# Campo Nombre #}
        <div style="margin-bottom: 20px;">
            {{ form_label(formulario.nombre, 'Escribe tu nombre completo:') }}
            {{ form_widget(formulario.nombre, {'attr': {'style': 'width: 100%; padding: 10px; border: 1px solid #ccc;'}}) }}
            <div style="color: #d9534f;">{{ form_errors(formulario.nombre) }}</div>
        </div>

        {# EL CAPTCHA SEPARADO: Aquí es donde aparece el cuadro de Google #}
        <div style="margin-bottom: 20px;">
            <label>Verificación de seguridad:</label>
            <div style="margin-top: 10px;">
                {{ form_widget(formulario.captcha) }}
            </div>
            <div style="color: #d9534f;">{{ form_errors(formulario.captcha) }}</div>
        </div>

        <button type="submit" style="background: #007bff; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; width: 100%;">
            Siguiente Paso
        </button>

        {{ form_end(formulario) }}
    </div>
{% endblock %}
