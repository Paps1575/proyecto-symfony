{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}

{% block body %}
    <h1>Paso 1: Registro</h1>

    {% if not formulario.vars.valid %}
        <div class="error-box">
            <strong>Errores en el formulario:</strong>
            <ul>
                {% for child in formulario.children %}
                    {% for error in child.vars.errors %}
                        <li>{{ child.vars.label }}: {{ error.message }}</li>
                    {% endfor %}
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <div style="max-width: 500px; background: #fff; padding: 20px; border: 1px solid #ddd; border-radius: 8px;">
        {{ form_start(formulario) }}
        <div style="margin-bottom: 10px;">{{ form_row(formulario.nombre) }}</div>
        <div style="margin-bottom: 10px;">{{ form_row(formulario.email) }}</div>
        <div style="margin-bottom: 10px;">{{ form_row(formulario.telefono) }}</div>
        <div style="margin-bottom: 10px;">{{ form_row(formulario.password.first) }}</div>
        <div style="margin-bottom: 10px;">{{ form_row(formulario.password.second) }}</div>

        <div style="margin: 20px 0;">
            <div class="g-recaptcha" data-sitekey="6LdJQlcsAAAAAHng2XiAGWHbFeaJi_d1ggsLHlND"></div>
        </div>

        <button type="submit" style="width: 100%; padding: 12px; background: #28a745; color: white; border: none; font-weight: bold; cursor: pointer;">
            Validar y Continuar
        </button>
        {{ form_end(formulario, {'render_rest': false}) }}
    </div>
{% endblock %}
