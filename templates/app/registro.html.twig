{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}

{% block body %}
    <h1>Paso 1: Registro</h1>
    <hr>

    {% for message in app.flashes('error') %}
        <div style="color: white; background: #d9534f; padding: 10px; margin-bottom: 15px;">
            {{ message }}
        </div>
    {% endfor %}

    <div style="max-width: 450px; padding: 20px; border: 1px solid #ccc; background: #fefefe;">
        {{ form_start(formulario) }}
        <div style="margin-bottom: 15px;">
            <label>Escribe tu nombre completo:</label>
            {{ form_widget(formulario.nombre, {'attr': {'style': 'width:100%; padding: 8px;'}}) }}
        </div>

        <div style="margin-bottom: 15px;">
            {# LLAVE DE SITIO QUE TERMINA EN LHlND #}
            <div class="g-recaptcha" data-sitekey="6LdJQlcsAAAAAHng2XiAGWHbFeaJi_d1ggsLHlND"></div>
        </div>

        <button type="submit" style="width: 100%; padding: 10px; background: #007bff; color: white; border: none; cursor: pointer;">
            Siguiente Paso
        </button>
        {{ form_end(formulario, {'render_rest': false}) }}
    </div>
{% endblock %}
