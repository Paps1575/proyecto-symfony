{% extends 'base.html.twig' %}

{% block title %}Paso 1: Registro{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# Carga la funcionalidad de reCAPTCHA de Google #}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}

{% block body %}
    <h1>Paso 1: Registro</h1>

    {# Breadcrumbs estilizados para tu tarea #}
    <nav aria-label="breadcrumb">
        <ol style="display: flex; list-style: none; padding: 0; gap: 10px;">
            {% for crumb in breadcrumbs %}
                <li>
                    {% if not loop.last %}
                        <a href="{{ crumb.url }}">{{ crumb.name }}</a> <span>/</span>
                    {% else %}
                        <strong>{{ crumb.name }}</strong>
                    {% endif %}
                </li>
            {% endfor %}
        </ol>
    </nav>

    <hr>

    {# Mensajes de error del sistema #}
    {% for message in app.flashes('error') %}
        <div style="color: white; background-color: #d9534f; padding: 10px; margin-bottom: 10px; border-radius: 5px;">
            {{ message }}
        </div>
    {% endfor %}

    <div style="max-width: 450px; background: #f9f9f9; padding: 20px; border-radius: 8px; border: 1px solid #ddd;">
        {{ form_start(formulario) }}

        <div style="margin-bottom: 20px;">
            {{ form_label(formulario.nombre, 'Escribe tu nombre completo:') }}
            {{ form_widget(formulario.nombre, {'attr': {'style': 'width: 100%; padding: 10px; border: 1px solid #ccc;'}}) }}
            <div style="color: #d9534f; font-size: 0.9em;">{{ form_errors(formulario.nombre) }}</div>
        </div>

        <div style="margin-bottom: 20px;">
            <label>Verificación de seguridad:</label>
            <div style="margin-top: 10px;">
                {# Widget oficial de Google con tu SITE KEY corregida #}
                <div class="g-recaptcha" data-sitekey="6LdJQlcsAAAAAHng2xiAGWHbFeaJi_d1ggsLHlND"></div>
            </div>
        </div>

        <button type="submit" style="background: #007bff; color: white; padding: 12px 20px; border: none; border-radius: 4px; cursor: pointer; width: 100%; font-weight: bold;">
            Siguiente Paso
        </button>

        {# ESTO LIMPIA LOS CAMPOS EXTRAS QUE SE VEÍAN EN TU CAPTURA #}
        {{ form_end(formulario, {'render_rest': false}) }}
    </div>
{% endblock %}
