{% extends 'base.html.twig' %}

{% block body %}
    <h1>Paso 1: Registro</h1>
    <hr>

    {# BLOQUE DE ALERTAS DE ERROR #}
    {% if not formulario.vars.valid %}
        <div style="background: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; padding: 15px; border-radius: 5px; margin-bottom: 20px; font-family: sans-serif;">
            <strong>Â¡Aguas! Corrige lo siguiente:</strong>
            <ul style="margin-top: 5px;">
                {% for child in formulario.children %}
                    {% for error in child.vars.errors %}
                        <li><strong>{{ child.vars.label }}:</strong> {{ error.message }}</li>
                    {% endfor %}
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <div style="max-width: 500px; padding: 20px; border: 1px solid #ddd; background: #fff; border-radius: 8px;">
        {{ form_start(formulario) }}
        <div style="margin-bottom: 15px;">
            {{ form_label(formulario.nombre) }}
            {{ form_widget(formulario.nombre, {'attr': {'style': 'width:100%; padding: 8px;'}}) }}
        </div>
        <div style="margin-bottom: 15px;">
            {{ form_label(formulario.email) }}
            {{ form_widget(formulario.email, {'attr': {'style': 'width:100%; padding: 8px;'}}) }}
        </div>
        <div style="margin-bottom: 15px;">
            {{ form_label(formulario.telefono) }}
            {{ form_widget(formulario.telefono, {'attr': {'style': 'width:100%; padding: 8px;'}}) }}
        </div>

        {# Campos de Password Repetido #}
        <div style="margin-bottom: 15px;">
            {{ form_label(formulario.password.first) }}
            {{ form_widget(formulario.password.first, {'attr': {'style': 'width:100%; padding: 8px;'}}) }}
        </div>
        <div style="margin-bottom: 15px;">
            {{ form_label(formulario.password.second) }}
            {{ form_widget(formulario.password.second, {'attr': {'style': 'width:100%; padding: 8px;'}}) }}
        </div>

        <div style="margin-bottom: 20px;">
            <div class="g-recaptcha" data-sitekey="6LdJQlcsAAAAAHng2XiAGWHbFeaJi_d1ggsLHlND"></div>
        </div>

        <button type="submit" style="width: 100%; padding: 12px; background: #28a745; color: white; border: none; font-weight: bold; cursor: pointer; border-radius: 4px;">
            Validar y Continuar
        </button>
        {{ form_end(formulario, {'render_rest': false}) }}
    </div>
{% endblock %}
