<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Proyecto Symfony{% endblock %}</title>
</head>
<body style="font-family: Arial, sans-serif; background-color: #f8f9fa; padding: 20px;">

{% if breadcrumbs is defined %}
    <nav style="margin-bottom: 20px;">
        <ol style="display: flex; list-style: none; padding: 10px; background: white; border: 1px solid #ddd; border-radius: 5px;">
            {% for crumb in breadcrumbs %}
                <li style="margin-right: 10px;">
                    {% if not loop.last %}
                        <a href="{{ crumb.url }}" style="text-decoration: none; color: #007bff;">{{ crumb.name }}</a>
                        <span style="margin-left: 10px; color: #ccc;">/</span>
                    {% else %}
                        <span style="color: #666;">{{ crumb.name }}</span>
                    {% endif %}
                </li>
            {% endfor %}
        </ol>
    </nav>
{% endif %}

{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
