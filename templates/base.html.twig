<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Registro Symfony{% endblock %}</title>
    <style>
        body { font-family: sans-serif; background: #f4f4f4; padding: 20px; }
        .breadcrumb { display: flex; list-style: none; padding: 10px; background: #fff; border: 1px solid #ddd; border-radius: 5px; margin-bottom: 20px; }
        .breadcrumb li { margin-right: 10px; }
        .breadcrumb a { text-decoration: none; color: #007bff; }
        .error-box { background: #f8d7da; color: #721c24; padding: 15px; border-radius: 5px; border: 1px solid #f5c6cb; margin-bottom: 20px; }
    </style>
</head>
<body>
{% if breadcrumbs is defined %}
    <nav>
        <ol class="breadcrumb">
            {% for crumb in breadcrumbs %}
                <li>
                    {% if not loop.last %}
                        <a href="{{ crumb.url }}">{{ crumb.name }}</a> <span>/</span>
                    {% else %}
                        <strong>{{ crumb.name }}</strong>
                    {% endif %}
                </li>
            {% endfor %}
        </ol>
    </nav>
{% endif %}

{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
