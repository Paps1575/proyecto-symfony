{% extends 'base.html.twig' %}

{% block body %}
    <style>
        @keyframes fadeIn { from { opacity: 0; transform: translateY(-10px); } to { opacity: 1; transform: translateY(0); } }
        .btn-accion:hover { opacity: 0.8; transform: scale(1.02); }
        tr.fila-usuario:hover { background-color: #f8f9fa; cursor: pointer; transition: 0.2s; }
        input:focus { border-color: #007bff !important; box-shadow: 0 0 0 2px rgba(0,123,255,0.1); }
        .card-deidad { background: white; padding: 30px; border-radius: 15px; box-shadow: 0 10px 25px rgba(0,0,0,0.05); border: 1px solid #eee; }
    </style>

    <div style="max-width: 900px; margin: 20px auto; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">

        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px;">
            <h2 id="titulo-pagina" style="color: #333; font-weight: 700;">GestiÃ³n de Usuarios</h2>
            <button id="btn-abrir-form" style="background: #007bff; color: white; border: none; padding: 10px 20px; border-radius: 8px; cursor: pointer; font-weight: bold; transition: 0.3s;">
                + Nueva Persona
            </button>
        </div>

        {# VISTA 1: TABLA MINIMALISTA #}
        <div id="vista-tabla" style="animation: fadeIn 0.4s;">
            <div class="card-deidad">
                <table style="width: 100%; border-collapse: collapse;">
                    <thead>
                    <tr style="border-bottom: 2px solid #f8f9fa; text-align: left; color: #999; font-size: 11px; letter-spacing: 1px;">
                        <th style="padding: 15px;">NOMBRE COMPLETO</th>
                        <th style="padding: 15px;">CORREO ELECTRÃ“NICO</th>
                    </tr>
                    </thead>
                    <tbody id="cuerpo-tabla"></tbody>
                </table>
                <div id="paginacion" style="display: flex; gap: 8px; justify-content: center; margin-top: 25px;"></div>
            </div>
        </div>

        {# VISTA 2: FORMULARIO (REGISTRO Y EDICIÃ“N) #}
        <div id="vista-formulario" style="display: none; animation: fadeIn 0.4s;">
            <div class="card-deidad">
                <h3 id="form-titulo" style="color: #444; margin-bottom: 25px; border-left: 4px solid #007bff; padding-left: 15px;">Registrar Nueva Persona</h3>
                <form id="form-registro" novalidate>
                    <input type="hidden" id="edit-id" name="id">
                    <div style="display: flex; gap: 20px; margin-bottom: 20px;">
                        <div style="flex: 1;">
                            <label style="display: block; margin-bottom: 8px; color: #666; font-weight: 600; font-size: 13px;">Nombre:</label>
                            <input type="text" id="nombre" name="nombre" required placeholder="Ej. Cesar Cabrera" style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; outline: none;">
                        </div>
                        <div style="flex: 1;">
                            <label style="display: block; margin-bottom: 8px; color: #666; font-weight: 600; font-size: 13px;">Email:</label>
                            <input type="email" id="email" name="email" required placeholder="usuario@correo.com" style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; outline: none;">
                        </div>
                    </div>
                    <div style="display: flex; gap: 12px; margin-top: 30px;">
                        <button type="submit" id="btn-guardar" disabled style="background: #ccc; color: white; border: none; padding: 12px 30px; border-radius: 8px; cursor: not-allowed; font-weight: bold; transition: 0.3s;">Guardar</button>
                        <button type="button" onclick="regresarALista()" style="background: #f8f9fa; color: #666; border: 1px solid #ddd; padding: 12px 30px; border-radius: 8px; cursor: pointer;">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>

        {# VISTA 3: PERFIL DE USUARIO (DETALLE) #}
        <div id="vista-detalle" style="display: none; animation: fadeIn 0.4s;">
            <div class="card-deidad" style="text-align: center;">
                <div style="width: 70px; height: 70px; background: #e9ecef; border-radius: 50%; margin: 0 auto 20px; display: flex; align-items: center; justify-content: center; font-size: 24px; color: #adb5bd;">ðŸ‘¤</div>
                <h3 id="det-nombre" style="margin: 0; color: #333; font-size: 22px;"></h3>
                <p id="det-email" style="color: #007bff; margin: 8px 0; font-size: 15px;"></p>
                <p style="color: #999; font-size: 13px;">Usuario verificado en Railway</p>

                <div style="margin-top: 30px; display: flex; justify-content: center; gap: 15px; border-top: 1px solid #f8f9fa; padding-top: 25px;">
                    <button id="btn-edit-link" class="btn-accion" style="background: #333; color: white; border: none; padding: 10px 20px; border-radius: 8px; cursor: pointer; font-weight: 600;">Editar</button>
                    <button id="btn-delete-link" class="btn-accion" style="background: #fff; color: #dc3545; border: 1px solid #dc3545; padding: 10px 20px; border-radius: 8px; cursor: pointer; font-weight: 600;">Eliminar</button>
                    <button onclick="regresarALista()" style="background: #f8f9fa; color: #666; border: 1px solid #ddd; padding: 10px 20px; border-radius: 8px; cursor: pointer;">Volver</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const cuerpoTabla = document.getElementById('cuerpo-tabla');
        const vistaTabla = document.getElementById('vista-tabla');
        const vistaFormulario = document.getElementById('vista-formulario');
        const vistaDetalle = document.getElementById('vista-detalle');
        const btnAbrirForm = document.getElementById('btn-abrir-form');
        const formRegistro = document.getElementById('form-registro');
        const btnGuardar = document.getElementById('btn-guardar');
        const inputs = formRegistro.querySelectorAll('input[required]');

        let editandoId = null;

        function ocultarTodo() {
            [vistaTabla, vistaFormulario, vistaDetalle, btnAbrirForm].forEach(el => el.style.display = 'none');
        }

        function regresarALista() {
            ocultarTodo();
            vistaTabla.style.display = 'block';
            btnAbrirForm.style.display = 'block';
            document.getElementById('titulo-pagina').innerText = "GestiÃ³n de Usuarios";
            editandoId = null;
            formRegistro.reset();
            cargarPersonas();
        }

        btnAbrirForm.onclick = () => {
            ocultarTodo();
            vistaFormulario.style.display = 'block';
            document.getElementById('form-titulo').innerText = "Nuevo Registro";
            document.getElementById('titulo-pagina').innerText = "AÃ±adir Deidad";
        };

        async function cargarPersonas(pagina = 1) {
            try {
                const response = await fetch(`/api/personas?page=${pagina}`);
                const data = await response.json();
                cuerpoTabla.innerHTML = '';
                data.items.forEach(p => {
                    const fila = document.createElement('tr');
                    fila.className = 'fila-usuario';
                    fila.style.borderBottom = '1px solid #f8f9fa';
                    fila.innerHTML = `<td style="padding: 15px; font-weight: 500;">${p.nombre}</td><td style="padding: 15px; color: #777;">${p.email}</td>`;
                    fila.onclick = () => verDetalle(p.id);
                    cuerpoTabla.appendChild(fila);
                });
                actualizarPaginador(data.pages, data.current_page);
            } catch (e) { console.error(e); }
        }

        async function verDetalle(id) {
            const res = await fetch(`/api/personas/${id}`);
            const p = await res.json();
            document.getElementById('det-nombre').innerText = p.nombre;
            document.getElementById('det-email').innerText = p.email;
            document.getElementById('btn-delete-link').onclick = () => eliminar(id);
            document.getElementById('btn-edit-link').onclick = () => prepararEdicion(p);
            ocultarTodo();
            vistaDetalle.style.display = 'block';
        }

        function prepararEdicion(p) {
            ocultarTodo();
            editandoId = p.id;
            document.getElementById('nombre').value = p.nombre;
            document.getElementById('email').value = p.email;
            document.getElementById('form-titulo').innerText = "Editar Perfil";
            vistaFormulario.style.display = 'block';
            validarFormulario();
        }

        function validarFormulario() {
            let esValido = true;
            const regexNombre = /^[a-zA-ZÃÃ‰ÃÃ“ÃšÃ¡Ã©Ã­Ã³ÃºÃ±Ã‘\s]+$/;
            inputs.forEach(i => {
                if (!i.value.trim()) esValido = false;
                if (i.id === 'nombre' && !regexNombre.test(i.value)) esValido = false;
            });
            btnGuardar.disabled = !esValido;
            btnGuardar.style.background = esValido ? '#28a745' : '#ccc';
            btnGuardar.style.cursor = esValido ? 'pointer' : 'not-allowed';
        }
        inputs.forEach(i => i.addEventListener('input', validarFormulario));

        formRegistro.onsubmit = async (e) => {
            e.preventDefault();
            const datos = Object.fromEntries(new FormData(formRegistro).entries());
            const url = editandoId ? `/api/personas/${editandoId}` : '/api/personas/nuevo';
            const metodo = editandoId ? 'PUT' : 'POST';

            const response = await fetch(url, {
                method: metodo,
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(datos)
            });
            if (response.ok) { alert(editandoId ? "Â¡Actualizado!" : "Â¡Guardado!"); regresarALista(); }
        };

        async function eliminar(id) {
            if (confirm("Â¿Eliminar a esta persona?")) {
                const res = await fetch(`/api/personas/${id}`, { method: 'DELETE' });
                if (res.ok) regresarALista();
            }
        }

        function actualizarPaginador(total, actual) {
            const cont = document.getElementById('paginacion');
            cont.innerHTML = '';
            for (let i = 1; i <= total; i++) {
                const btn = document.createElement('button');
                btn.innerText = i;
                btn.style.cssText = `padding: 8px 14px; border: 1px solid #ddd; cursor: pointer; border-radius: 6px; background: ${i === actual ? '#007bff' : 'white'}; color: ${i === actual ? 'white' : '#555'};`;
                btn.onclick = () => cargarPersonas(i);
                cont.appendChild(btn);
            }
        }

        cargarPersonas();
    </script>
{% endblock %}
