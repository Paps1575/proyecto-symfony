{% extends 'base.html.twig' %}

{% block body %}
    <style>
        @keyframes fadeIn { from { opacity: 0; transform: translateY(-10px); } to { opacity: 1; transform: translateY(0); } }
        .btn-paginacion:hover { background-color: #f0f0f0 !important; }
        input:focus { border-color: #007bff !important; box-shadow: 0 0 0 2px rgba(0,123,255,0.1); }
        input.invalid { border-color: #dc3545 !important; background-color: #fff8f8; }
        tr.fila-usuario:hover { background-color: #f8f9fa; cursor: pointer; transition: 0.2s; }
    </style>

    <div style="max-width: 900px; margin: 20px auto; background: white; padding: 30px; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.05); border: 1px solid #eee; font-family: sans-serif;">

        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px;">
            <h2 id="titulo-pagina" style="color: #333; margin: 0; font-weight: 600;">GestiÃ³n de Usuarios</h2>
            <button id="btn-abrir-form" style="background: #007bff; color: white; border: none; padding: 10px 22px; border-radius: 8px; cursor: pointer; font-weight: bold; transition: 0.3s;">
                + Nueva Persona
            </button>
        </div>

        {# VISTA 1: TABLA (Minimalista) #}
        <div id="vista-tabla" style="animation: fadeIn 0.4s;">
            <div style="overflow-x: auto;">
                <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
                    <thead>
                    <tr style="border-bottom: 2px solid #f8f9fa; text-align: left; color: #999; text-transform: uppercase; font-size: 11px; letter-spacing: 1px;">
                        <th style="padding: 15px;">Nombre Completo</th>
                        <th style="padding: 15px;">Correo ElectrÃ³nico</th>
                    </tr>
                    </thead>
                    <tbody id="cuerpo-tabla" style="color: #555; font-size: 14px;"></tbody>
                </table>
            </div>
            <div id="paginacion" style="display: flex; gap: 8px; justify-content: center; margin-top: 20px;"></div>
        </div>

        {# VISTA 2: FORMULARIO DE REGISTRO #}
        <div id="vista-formulario" style="display: none; animation: fadeIn 0.4s;">
            <h3 style="color: #444; margin-bottom: 25px; border-left: 4px solid #007bff; padding-left: 15px;">Registrar Nueva Persona</h3>
            <form id="form-registro" novalidate>
                <div style="display: flex; gap: 20px; margin-bottom: 20px;">
                    <div style="flex: 1;">
                        <label style="display: block; margin-bottom: 8px; color: #666; font-weight: bold; font-size: 13px;">Nombre:</label>
                        <input type="text" id="nombre" name="nombre" required placeholder="Ej. Cesar Cabrera"
                               style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; outline: none;">
                    </div>
                    <div style="flex: 1;">
                        <label style="display: block; margin-bottom: 8px; color: #666; font-weight: bold; font-size: 13px;">Email:</label>
                        <input type="email" id="email" name="email" required placeholder="usuario@correo.com"
                               style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; outline: none;">
                    </div>
                </div>
                <div style="display: flex; gap: 20px; margin-bottom: 25px;">
                    <div style="flex: 1;">
                        <label style="display: block; margin-bottom: 8px; color: #666; font-weight: bold; font-size: 13px;">TelÃ©fono:</label>
                        <input type="text" id="telefono" name="telefono" required maxlength="10" placeholder="10 dÃ­gitos"
                               style="width: 48%; padding: 12px; border: 1px solid #ddd; border-radius: 8px; outline: none;">
                    </div>
                </div>
                <div style="display: flex; gap: 12px; margin-top: 20px; border-top: 1px solid #eee; padding-top: 20px;">
                    <button type="submit" id="btn-guardar" disabled
                            style="background: #ccc; color: white; border: none; padding: 12px 30px; border-radius: 8px; cursor: not-allowed; font-weight: bold;">
                        Guardar Datos
                    </button>
                    <button type="button" onclick="regresarALista()" style="background: #f8f9fa; color: #666; border: 1px solid #ddd; padding: 12px 30px; border-radius: 8px; cursor: pointer;">
                        Cancelar
                    </button>
                </div>
            </form>
        </div>

        {# VISTA 3: DETALLE DE USUARIO (La "otra pantalla") #}
        <div id="vista-detalle" style="display: none; animation: fadeIn 0.4s;">
            <div style="border-radius: 10px; background: #fcfcfc; border: 1px solid #f0f0f0; padding: 40px; text-align: center;">
                <div style="width: 80px; height: 80px; background: #e9ecef; border-radius: 50%; margin: 0 auto 20px; display: flex; align-items: center; justify-content: center; font-size: 30px; color: #adb5bd;">ðŸ‘¤</div>
                <h3 id="det-nombre" style="margin: 0; color: #333; font-size: 24px;"></h3>
                <p id="det-email" style="color: #007bff; margin: 10px 0; font-size: 16px;"></p>
                <p id="det-info" style="color: #888; margin-bottom: 30px; font-size: 14px;">Usuario registrado en el sistema</p>

                <div style="display: flex; justify-content: center; gap: 15px; border-top: 1px solid #eee; padding-top: 30px;">
                    <button id="btn-eliminar-det" style="background: #fff; color: #dc3545; border: 1px solid #dc3545; padding: 10px 25px; border-radius: 8px; cursor: pointer; font-weight: bold;">Eliminar</button>
                    <button id="btn-editar-det" style="background: #333; color: white; border: none; padding: 10px 25px; border-radius: 8px; cursor: pointer; font-weight: bold;">Editar Usuario</button>
                    <button onclick="regresarALista()" style="background: #f8f9fa; color: #666; border: 1px solid #ddd; padding: 10px 25px; border-radius: 8px; cursor: pointer;">Volver</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const cuerpoTabla = document.getElementById('cuerpo-tabla');
        const vistaTabla = document.getElementById('vista-tabla');
        const vistaFormulario = document.getElementById('vista-formulario');
        const vistaDetalle = document.getElementById('vista-detalle');
        const btnAbrirForm = document.getElementById('btn-abrir-form');
        const formRegistro = document.getElementById('form-registro');
        const btnGuardar = document.getElementById('btn-guardar');
        const inputs = formRegistro.querySelectorAll('input[required]');

        // --- NAVEGACIÃ“N ---
        function ocultarTodo() {
            vistaTabla.style.display = 'none';
            vistaFormulario.style.display = 'none';
            vistaDetalle.style.display = 'none';
            btnAbrirForm.style.display = 'none';
        }

        function regresarALista() {
            ocultarTodo();
            vistaTabla.style.display = 'block';
            btnAbrirForm.style.display = 'block';
            document.getElementById('titulo-pagina').innerText = "GestiÃ³n de Usuarios";
            formRegistro.reset();
            cargarPersonas();
        }

        btnAbrirForm.onclick = () => {
            ocultarTodo();
            vistaFormulario.style.display = 'block';
            document.getElementById('titulo-pagina').innerText = "Nuevo Registro";
        };

        // --- CARGAR DATOS ---
        async function cargarPersonas(pagina = 1) {
            try {
                const response = await fetch(`/api/personas?page=${pagina}`);
                const data = await response.json();
                cuerpoTabla.innerHTML = '';
                data.items.forEach(p => {
                    const fila = document.createElement('tr');
                    fila.className = 'fila-usuario';
                    fila.style.borderBottom = '1px solid #f8f9fa';
                    fila.innerHTML = `
                        <td style="padding: 15px; font-weight: 500;">${p.nombre}</td>
                        <td style="padding: 15px; color: #777;">${p.email}</td>
                    `;
                    // Al dar clic a la fila, vamos al detalle
                    fila.onclick = () => verDetalle(p.id);
                    cuerpoTabla.appendChild(fila);
                });
                actualizarPaginador(data.pages, data.current_page);
            } catch (e) { console.error(e); }
        }

        // --- VER DETALLE (La "Otra Pantalla") ---
        async function verDetalle(id) {
            try {
                // Obtenemos los datos especÃ­ficos del usuario
                const response = await fetch(`/api/personas/${id}`);
                const p = await response.json();

                document.getElementById('det-nombre').innerText = p.nombre;
                document.getElementById('det-email').innerText = p.email;

                // Configurar botones de esa pantalla
                document.getElementById('btn-eliminar-det').onclick = () => eliminar(id);
                document.getElementById('btn-editar-det').onclick = () => alert("FunciÃ³n editar prÃ³ximamente, pa.");

                ocultarTodo();
                vistaDetalle.style.display = 'block';
                document.getElementById('titulo-pagina').innerText = "Perfil de Usuario";
            } catch (e) { alert("No se pudo cargar el detalle."); }
        }

        // --- VALIDACIÃ“N BOTÃ“N ---
        function validarFormulario() {
            let esValido = true;
            const regexNombre = /^[a-zA-ZÃÃ‰ÃÃ“ÃšÃ¡Ã©Ã­Ã³ÃºÃ±Ã‘\s]+$/;
            inputs.forEach(input => {
                if (!input.value.trim()) esValido = false;
                if (input.id === 'nombre' && !regexNombre.test(input.value)) esValido = false;
            });
            btnGuardar.disabled = !esValido;
            btnGuardar.style.background = esValido ? '#28a745' : '#ccc';
            btnGuardar.style.cursor = esValido ? 'pointer' : 'not-allowed';
        }
        inputs.forEach(input => input.addEventListener('input', validarFormulario));

        // --- GUARDAR ---
        formRegistro.onsubmit = async (e) => {
            e.preventDefault();
            const datos = Object.fromEntries(new FormData(formRegistro).entries());
            const response = await fetch('/api/personas/nuevo', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(datos)
            });
            if (response.ok) {
                alert("Â¡Guardado, pa!");
                regresarALista();
            }
        };

        // --- ELIMINAR ---
        async function eliminar(id) {
            if (!confirm("Â¿Deseas eliminar a este usuario definitivamente?")) return;
            const response = await fetch(`/api/personas/${id}`, { method: 'DELETE' });
            if (response.ok) {
                alert("Usuario borrado.");
                regresarALista();
            }
        }

        function actualizarPaginador(total, actual) {
            const cont = document.getElementById('paginacion');
            cont.innerHTML = '';
            for (let i = 1; i <= total; i++) {
                const btn = document.createElement('button');
                btn.innerText = i;
                btn.className = 'btn-paginacion';
                btn.style.cssText = `padding: 8px 14px; border: 1px solid #ddd; cursor: pointer; border-radius: 6px; background: ${i === actual ? '#007bff' : 'white'}; color: ${i === actual ? 'white' : '#555'};`;
                btn.onclick = () => cargarPersonas(i);
                cont.appendChild(btn);
            }
        }

        cargarPersonas();
    </script>
{% endblock %}
